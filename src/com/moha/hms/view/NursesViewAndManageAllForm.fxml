<BorderPane fx:id="context" prefHeight="420.0" prefWidth="870.0" style="-fx-background-color: #CCCCCC; -fx-background-radius: 16;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.moha.hms.controller.NursesViewAndManageAllFormController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="View &amp; Manage All Nurses">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Pane prefHeight="40.0" prefWidth="87.0" />
                  <TextField fx:id="txtSearch" prefHeight="30.0" prefWidth="300.0" promptText="Search " style="-fx-background-radius: 12px;" styleClass="dashboard-search-bar">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button id="addBtn" fx:id="btnAddNew" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#addNewBtnOnAction" prefHeight="30.0" prefWidth="75.0" style="-fx-background-radius: 16;" text="Add" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <graphic>
                        <ImageView fx:id="addBtnImg" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../assets/icons/nurse.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button id="backBtn" fx:id="btnBack" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#backBtnOnAction" prefHeight="30.0" prefWidth="75.0" style="-fx-background-radius: 16;" text="Back">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <graphic>
                        <ImageView fx:id="backBtnImg" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../assets/icons/back-arrow.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
            <Separator prefHeight="8.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Separator>
         </children>
         <padding>
            <Insets left="30.0" right="30.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox prefHeight="190.0" prefWidth="325.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <TableView fx:id="tblNurses" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colCount" prefWidth="30.0" />
                  <TableColumn fx:id="colId" prefWidth="100.0" text="Id" />
                  <TableColumn fx:id="colName" prefWidth="153.0" text="Name" />
                  <TableColumn fx:id="colEmail" prefWidth="161.0" text="Email" />
                  <TableColumn fx:id="colContact" prefWidth="138.0" text="Contact No" />
                  <TableColumn fx:id="colDepartmentName" prefWidth="138.0" text="Department Name" />
                  <TableColumn fx:id="colUpdate" prefWidth="44.0" />
                  <TableColumn fx:id="colDelete" minWidth="8.0" prefWidth="44.0" />
               </columns>
            </TableView>
         </children>
      </HBox>
   </center>
</BorderPane>
